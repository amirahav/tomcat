<?xml version='1.0' encoding='utf-8'?>

<Context>

    <WatchedResource>WEB-INF/web.xml</WatchedResource>

    <!--
    <Manager pathname="" />
    -->

    <!--
    <Valve className="org.apache.catalina.valves.CometConnectionManagerValve" />
    -->

  <% if @jndi %>
    <% @jndi_connections.each { |conn| %>
    <Resource
     name="jdbc/<%= conn['datasource_name'] %>" auth="Container" type="javax.sql.DataSource"
     driverClassName="<%= conn['driver'] %>"
     url="jdbc:<%= conn['connection_string'] %>"
     username="<%= conn['user'] %>" password="<%= conn['password'] %>"
     maxTotal="<%= conn['max_total'] %>" maxIdle="<%= conn['max_idle'] %>" maxWaitMillis="<%= conn['max_wait'] %>"/>
    <% } %>
  <% end %>
</Context>
