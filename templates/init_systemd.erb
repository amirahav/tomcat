# Systemd unit file for tomcat_<%= @instance %>

[Unit]
Description=<%= @instance %> Apache Tomcat Application
After=syslog.target network.target

[Service]
Type=forking

<% @env_vars.each do |h| -%>
  <% h.each_pair do |k,v| -%>
Environment="<%= k -%>=<%= v %>"
  <% end -%>
<% end -%>

<% if !@service_vars.empty? -%>
  <% @service_vars.each do |h| -%>
    <% h.each_pair do |k,v| -%>
<%= k -%>=<%= v %>
    <% end -%>
  <% end -%>
<% end -%>

ExecStart=<%= @install_path %>/bin/catalina.sh start >> <%= @install_path %>/logs/catalina.out 2>&1
ExecStop=<%= @install_path %>/bin/catalina.sh stop >> <%= @install_path %>/logs/catalina.out 2>&1
SuccessExitStatus=0 143
Restart=on-failure
RestartSec=2

User=<%= @user %>
Group=<%= @group %>

[Install]
WantedBy=multi-user.target
